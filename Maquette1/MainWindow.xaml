<Window
    x:Class="Maquette1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Maquette1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="#FFDDFFDD">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#FF168A3D">
            <StackPanel Grid.ColumnSpan="3">

                <Label
                    Width="798"
                    Background="#FF168A3D"
                    Content="Nom magasin"
                    FontWeight="Bold" />


            </StackPanel>
            <Image Margin="-11,46,-11,269" Source="/img/Logo_Botanic.png" Stretch="Fill"/>
        </Grid>
        <Grid Grid.Column="1">
            <StackPanel>
                <TextBox
                    Width="500"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="Rechercher" />
                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                    <Button
                        Width="60"
                        Margin="10,0,10,0"
                        Content="Mot clef 1" />
                    <Button
                        Width="60"
                        Margin="10,0,10,0"
                        Content="Mot clef 2" />
                    <Button
                        Width="60"
                        Margin="10,0,10,0"
                        Content="Mot clef 3" />
                    <Button
                        Width="60"
                        Margin="10,0,10,0"
                        Content="Mot clef 4" />
                    <Button
                        Width="60"
                        Margin="10,0,10,0"
                        Content="Mot clef 5" />
                    <Button
                        Width="60"
                        Margin="10,0,10,0"
                        Content="Mot clef 6" />
                    <Button
                        Width="60"
                        Margin="10,0,10,0"
                        Content="Mot clef N" />
                </StackPanel>
                <Label
                    Margin="3,30,0,0"
                    Content="Filtres :"
                    FontSize="20"
                    FontWeight="Bold" />
                <StackPanel Margin="19,8,0,0" Orientation="Horizontal">
                    <Label Content="Types" />
                    <Label Margin="170,0,0,0" Content="Categories" />
                </StackPanel>
                <StackPanel Margin="22,8,0,0" Orientation="Horizontal">
                    <ComboBox Width="90">
                        <ComboBoxItem>Jardin</ComboBoxItem>
                        <ComboBoxItem>Mobilier</ComboBoxItem>
                        <ComboBoxItem>Potager</ComboBoxItem>
                        <ComboBoxItem>...</ComboBoxItem>
                    </ComboBox>
                    <ComboBox Width="140" Margin="118,0,0,0">
                        <ComboBoxItem>Plantes</ComboBoxItem>
                        <ComboBoxItem>Entretien jardin</ComboBoxItem>
                        <ComboBoxItem>Matériel arrosage</ComboBoxItem>
                        <ComboBoxItem>...</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                        Margin="0,30,0,0"
                        Content="Propositions produits selon critères"
                        FontSize="15"
                        FontWeight="Bold" />
                    <Label
                        Margin="20,33,0,0"
                        Content="Type commande :"
                        FontWeight="Bold" />
                    <RadioButton Margin="5,40,0,0" Content="Centrale" />
                    <RadioButton Margin="10,40,0,0" Content="Locale" />
                </StackPanel>

                <ListBox Height="100" Margin="10,10,10,0">
                    <ListBoxItem Content="Produit 1                                                                              XX,xx eur                                      - | +" />
                    <ListBoxItem Content="Produit 2                                                                              XX,xx eur                                      - | +" />
                    <ListBoxItem Content="Produit 3                                                                              XX,xx eur                                      - | +" />
                    <ListBoxItem Content="Produit 4                                                                              XX,xx eur                                      - | +" />
                    <ListBoxItem Content="Produit 5                                                                              XX,xx eur                                      - | +" />
                    <ListBoxItem Content="Produit 6                                                                              XX,xx eur                                      - | +" />
                    <ListBoxItem Content="Produit 7                                                                              XX,xx eur                                      - | +" />
                    <ListBoxItem Content="Produit 8                                                                              XX,xx eur                                      - | +" />
                    <ListBoxItem Content="Produit n                                                                              XX,xx eur                                      - | +" />
                </ListBox>

                <Button Content="Valider" Margin="150,20,150,0" BorderThickness="3,3,3,3" Background="#FF5AC35A"></Button>


            </StackPanel>
        </Grid>
        <Grid Grid.Column="2" Background="White">
            <StackPanel Width="100" HorizontalAlignment="Center">
                <Button Margin="10,5,2,0" Content="Connecté" />
                <Label
                    Margin="0,227,0,0"
                    Content="Filtre couleur :"
                    FontWeight="Bold" />
                <ComboBox Width="90" Margin="5,0,0,0">
                    <ComboBoxItem>Rouge</ComboBoxItem>
                    <ComboBoxItem>Vert</ComboBoxItem>
                    <ComboBoxItem>Jaune</ComboBoxItem>
                    <ComboBoxItem>...</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
