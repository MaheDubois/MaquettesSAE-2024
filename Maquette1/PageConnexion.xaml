<Window x:Class="Maquette1.PageConnexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maquette1"
        mc:Ignorable="d"
        Title="PageConnexion" Height="374" Width="527">
    <Grid Background="#FFD0FFD0" Margin="0,0,0,-16">
        <Border BorderBrush="Black" Background="White" BorderThickness="1" HorizontalAlignment="Left" Height="241" Margin="92,83,0,0" VerticalAlignment="Top" Width="336"/>
        <StackPanel Margin="125,100,0,0">
            <Label Content="Identifiant ou adresse e-mail"/>
            <TextBox Width="260" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Height="25"></TextBox>
            <Label Content="Mot de passe" Margin="0,10,10,0"/>
            <TextBox Width="260" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Height="25"></TextBox>
            <TextBlock Text="Mot de passe oublié ?" Margin="10,5,0,0"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <CheckBox Content="Se souvenir de moi" Margin="10,15,0,0"/>
                <Button x:Name="ButtonSeConnecter" Content="Se connecter" Margin="50,14,0,0" Height="20" Background="#FF50C350" Width="90" Click="ButtonSeConnecter_Click"></Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Pas de compte ?" FontWeight="Bold" Margin="5,15,0,0"></Label>
                <Button Content="S'inscrire" Margin="75,14,0,0" Height="23" Background="#FF50C350" FontSize="15" Width="90" ></Button>
            </StackPanel>


        </StackPanel>
        <Image Margin="136,-19,143,274" Source="/img/Logo_Botanic.png" Stretch="Fill"/>
    </Grid>
</Window>
